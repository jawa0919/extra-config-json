{
  "name": "extra-config-json",
  "displayName": "extraConfigJson",
  "description": "extraConfig.json Quick swap, Simple Save, Git Unchanged",
  "version": "0.0.4",
  "publisher": "jawa0919",
  "author": {
    "name": "jawa0919",
    "email": "jawa0919@163.com"
  },
  "homepage": "https://github.com/jawa0919/extra-config-json",
  "bugs": {
    "url": "https://github.com/jawa0919/extra-config-json/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jawa0919/extra-config-json.git"
  },
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "workspaceContains:**/extraConfig.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename == extraConfig.json",
          "command": "extra-config-json.save",
          "group": "navigation@-1"
        },
        {
          "when": "resourceFilename == extraConfig.json",
          "command": "extra-config-json.swap",
          "group": "navigation@-2"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceFilename == extraConfig.json",
          "command": "extra-config-json.git.assume.unchanged",
          "group": "extra-config-json-git@-1"
        },
        {
          "when": "resourceFilename == extraConfig.json",
          "command": "extra-config-json.git.no.assume.unchanged",
          "group": "extra-config-json-git@-2"
        },
        {
          "when": "resourceFilename == extraConfig.json",
          "command": "extra-config-json.env.create",
          "group": "extra-config-json-env@-1"
        },
        {
          "when": "resourceFilename =~ /^.env.*/",
          "command": "extra-config-json.env.create.json",
          "group": "extra-config-json-env@-1"
        }
      ]
    },
    "commands": [
      {
        "command": "extra-config-json.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extra-config-json.save",
        "title": "Save extraConfig.json @extra-config-json ",
        "icon": "$(save)"
      },
      {
        "command": "extra-config-json.swap",
        "title": "Swap extraConfig.json @extra-config-json ",
        "icon": "$(link)"
      },
      {
        "command": "extra-config-json.git.assume.unchanged",
        "title": "Git --assume-unchanged @extra-config-json",
        "icon": "$(lock)"
      },
      {
        "command": "extra-config-json.git.no.assume.unchanged",
        "title": "Git --no-assume-unchanged @extra-config-json",
        "icon": "$(unlock)"
      },
      {
        "command": "extra-config-json.env.create",
        "title": "create env file @extra-config-json",
        "icon": "$(file-code)"
      },
      {
        "command": "extra-config-json.env.create.json",
        "title": "create extraConfig.json file @extra-config-json",
        "icon": "$(file-code)"
      }
    ],
    "configuration": [
      {
        "title": "extra-config-json",
        "properties": {
          "extra-config-json.dirPath": {
            "markdownDescription": "custom backup dirPath",
            "type": "string"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "fs-extra": "^10.1.0"
  }
}
